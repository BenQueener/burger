<div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12">
	        <h1>Eat-Da-Burger</h1>
	        <p></p>
	    </div>
  	</div>
<!--=======Left Column======================================================-->
  <div class="row">
    <div class="col-sm-6">
      <h2>New Burgers</h2>

        <ul>
          {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.id}} {{this.name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button class="change-burger" type="submit">Devour It!</button>
              </form>

            </li>
          {{/unless}}
        {{/each}}
      </ul>

    </div>
<!--===========Right Column==================================================-->
  <div class="col-sm-6">

    <h2>Devoured Burgers</h2>
        
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.id}} {{this.name}}
          </li>
        {{/if}}
      {{/each}}
        
    </div>

  </div>
<!--=============================================================-->
	<div class="row">
	    <div class="center col-sm-12">
  			<h3>Add A Burger</h3>

			  <form class="create-form" action="/" method="POST">

          <div class="form-group">
          <p>Enter a new burger and click submit.</p>
            <input type="text" id="ca" name="name">
          </div>
          
			    <button class="btn-primary" type="submit">Submit Order</button>
		  	</form>
	    </div>
  </div>
</div>


