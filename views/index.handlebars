
	        <h1>Eat-Da-Burger</h1>

<!--=======Left Column======================================================-->

      <h2>New Burgers</h2>

        <ul>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/unless}}
          {{/each}}
        </ul> 
<!--===========Right Column==================================================-->

    <h2>Devoured Burgers</h2>
        
         <ul>
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block-devoured devoured=true}}
            {{/if}}
          {{/each}}
        </ul> 


<!--=============================================================-->

  			<h3>Add A Burger</h3>
			  <form class="create-form" >
          
          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>

            <div class="form-group">
              <label for="devoured">Devoured?</label><br>
              <input type="radio" name="devoured" value="1" > Devoured!<br>
              <input type="radio" name="devoured" value="0"checked> Not Devoured
            </div>


			    <button type="submit">Submit Order</button>
		  	</form>
	    </div>
  </div>
</div>


